.ui.padded.piled.segment
  %div(*ngIf="character")
    .ui.stackable.bottom.aligned.two.column.grid
      .sixteen.wide.column
        .ui.breadcrumb
          %a.section(routerLink="/") Home
          %i.right.angle.icon.divider/
          %a.section(routerLink="/") Star Trek: Fate
          %i.right.angle.icon.divider/
      .column
        %h1.ui.header
          {{character?.name}}
          .sub.header
            Played by
            %a([routerLink]="['/Player', {id: character?.player.id}]")> {{character?.player?.name}}
      .column
        .ui.bottom.aligned.center.aligned.grid
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Fate Points
              .value {{fatePoints}}
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Refresh
              .value 2
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Skill Cap
              .value +5
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Skill Points
              .value 35

    .ui.section.divider/

    .ui.stackable.two.column.grid
      .column
        %h2.ui.header Aspects
        .ui.list
          .item(*ngFor="let aspect of character?.aspects")
            .ui.grey.sub.header(*ngIf="aspect.label") {{aspect.label}}
            %a.fate-taggable((click)="addModifier()") {{aspect.name}}
      .column
        %h2.ui.header Skills
        .ui.relaxed.divided.list
          .item(*ngFor="let entry of character?.skillsByRank.entrySeq() | sorted:0 | reversed")
            .fate-skill
              .left.floated.content
                .fate-skill-rank
                  .ui.small.header {{entry[0] | signed}}
              .content
                .ui.grey.sub.header.fate-skill-adjective
                  {{adjectiveLadder.get(entry[0])}}
                .ui.horizontal.list
                  .item(*ngFor="let skill of entry[1] | sorted:name")
                    %a.fate-taggable {{skill.name}}
      .column
        %h2.ui.header Stress
        .ui.list
          .item(*ngFor="let track of character?.stressTracks | indexed")
            .ui.grey.sub.header {{track[1].name}}
            .ui.large.circular.labels(style="padding-top: 0.25em")
              %a.ui.label.fate-stress-box(*ngFor="let entry of track[1].boxes | indexed:1" [class.fate-active]="entry[1]" (click)="setStress($event, track[0], entry[0], !entry[1])")
                {{entry[0]}}
        %h2.ui.header Consequences
        .ui.relaxed.list
          .item(*ngFor="let consequence of character?.consequences")
            .fate-consequence
              .left.floated.content
                .ui.small.header {{consequence.rank | signed}}
              .content
                .ui.grey.sub.header {{consequence.label}}
                %a.fate-taggable(*ngIf="consequence.name")
                  {{consequence.name}}
                %span.fate-empty-consequence(*ngIf="!consequence.name")
                  Empty Slot
      .column
        %h2.ui.header Stunts
        .ui.relaxed.list
          .item(*ngFor="let stunt of character?.stunts")
            %a.header
              %span.fate-taggable {{stunt.name}}
            .description {{stunt.description}}

.fate-sheet-overlay
  .ui.basic.inverted.padded.segment
    .ui.centered.stackable.grid
      .row
        .eight.wide.column
          .ui.middle.aligned.three.column.grid
            .right.aligned.column
              .ui.inverted.statistic
                .value +5
                .label Shifts
            .center.aligned.column
              .ui.inverted.header.fate-sheet-overlay-for for
            .left.aligned.column
              .ui.inverted.statistic
                .value 2
                .label Fate Points
      .row
        .eight.wide.column
          .ui.two.column.grid
            .column
              %button.ui.basic.positive.fluid.button
                %i.ui.checkmark.icon
                Apply
            .column
              %button.ui.basic.negative.fluid.button
                %i.ui.remove.icon
                Clear

%fate-fab(color="red" icon="minus" inactiveIcon="user" label="Spend a Fate Point" (action)="spendPoint()")
  %fate-fab-action(color="blue" icon="plus" label="Add a Fate Point" (action)="addPoint()")/
  %fate-fab-action(color="yellow" icon="pencil" label="Edit {{character?.name}}")/

