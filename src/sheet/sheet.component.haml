.ui.padded.piled.segment
  %div(*ngIf="character")
    .ui.stackable.bottom.aligned.two.column.grid
      .sixteen.wide.column
        .ui.breadcrumb
          %a.section Home
          %i.right.angle.icon.divider/
          %a.section Star Trek: Fate
          %i.right.angle.icon.divider/
      .column
        %h1.ui.header
          {{character?.name}}
          .sub.header
            Played by
            %a([routerLink]="['/Player', {id: character?.player.id}]")> {{character?.player?.name}}
      .column
        .ui.bottom.aligned.center.aligned.grid
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Fate Points
              .value {{fatePoints}}
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Refresh
              .value 2
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Skill Cap
              .value +5
          .eight.wide.mobile.four.wide.tablet.four.wide.computer.column
            %a.ui.tiny.statistic
              .label Skill Points
              .value 35

    .ui.section.divider/

    .ui.stackable.two.column.grid
      .column
        %h2.ui.header Aspects
        .ui.list
          .item(*ngFor="let aspect of character?.aspects")
            .ui.grey.sub.header(*ngIf="aspect.label") {{aspect.label}}
            %a.fate-aspect {{aspect.name}}
      .column
        %h2.ui.header Skills
        %table.ui.very.basic.compact.unstackable.table
          %tbody
            %tr(*ngFor="let entry of character?.skillsByRank | sorted:0 | reversed")
              %td.collapsing
                .ui.small.header {{entry[0] | signed}}
              %td
                %a.ui.basic.horizontal.label(*ngFor="let skill of entry[1]") {{skill.name}}
      .column
        %h2.ui.header Stress
        .ui.list
          .item(*ngFor="let track of character?.stressTracks | indexed")
            .ui.grey.sub.header {{track[1].name}}
            .ui.large.circular.labels(style="padding-top: 0.25em")
              %a.ui.label.fate-stress-box(*ngFor="let entry of track[1].boxes | indexed:1" [class.fate-active]="entry[1]" (click)="setStress($event, track[0], entry[0], !entry[1])")
                {{entry[0]}}
        %h2.ui.header Consequences
      .column
        %h2.ui.header Stunts
        .ui.relaxed.list
          .item(*ngFor="let stunt of character?.stunts")
            .header {{stunt.name}}
            .description {{stunt.description}}
%fate-fab(color="red" icon="minus" inactiveIcon="user" label="Spend a Fate Point" (action)="spendPoint()")
  %fate-fab-action(color="blue" icon="plus" label="Add a Fate Point" (action)="addPoint()")/
  %fate-fab-action(color="yellow" icon="pencil" label="Edit {{character?.name}}")/

