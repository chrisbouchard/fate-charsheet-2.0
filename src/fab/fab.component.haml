.fate-fab-extra-actions((animationend)="show()")
  .fate-fab-container(*ngFor="let action of actions.toArray() | reversed" (click)="action.doClick($event)")
    .fate-fab-label(*ngIf="showLabels && action.label")
      %a.ui.right.pointing.label {{action.label}}
    %button.massive.circular.ui.icon.button(class="{{action.color}}")
      .fate-fab-icon
        %i.icon(class="{{action.icon}}")/

.fate-fab-container((click)="doClick($event)")
  .fate-fab-label.fate-fab-main-label(*ngIf="showLabels && label" (animationend)="checkLabel()")
    %a.ui.right.pointing.label {{label}}
  %button.massive.circular.ui.icon.button(class="{{currentColor}}")
    .fate-fab-icon.fate-fab-main
      %i.icon(class="{{currentIcon}}")/

